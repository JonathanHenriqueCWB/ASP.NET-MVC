@model Projeto005_Validacao.Models.Pessoa
@{
    ViewBag.Title = "validção pessoa";
}

<h2>validação pessoa</h2>

@using (Html.BeginForm())
{
    //Carrega a lista de erro, true indica para nao mostrar os erros nessa linha
    @Html.ValidationSummary(true)
<fldset>
    <legend>Dados da Pessoa</legend>

    <div >
        <!--Label Helper-->
        @Html.LabelFor(model => model.Nome)
    </div>
    <div>
        <!--input text Helper-->
        @Html.EditorFor(model => model.Nome)<br />
        <!--Erros serão mostrados nessa linha-->
        @Html.ValidationMessageFor(model => model.Nome)
    </div>

    <div>
        @Html.LabelFor(model => model.Observacao)
    </div>
    <div>
        @Html.TextAreaFor(model => model.Observacao)<br />
        @Html.ValidationMessageFor(model => model.Observacao)
    </div>

    <div>
        @Html.LabelFor(model => model.Idade)
    </div>
    <div>
        @Html.EditorFor(model => model.Idade)<br />
        @Html.ValidationMessageFor(model => model.Idade)
    </div>

    <div>
        @Html.LabelFor(model => model.Email)
    </div>
    <div>
        @Html.EditorFor(model => model.Email)<br />
        @Html.ValidationMessageFor(model => model.Email)
    </div>

    <div>
        @Html.LabelFor(model => model.Login)
    </div>
    <div>
        @Html.EditorFor(model => model.Login)<br />
        @Html.ValidationMessageFor(model => model.Login)
    </div>

    <div>
        @Html.LabelFor(model => model.Senha)
    </div>
    <div>
        @Html.PasswordFor(model => model.Senha)<br />
        @Html.ValidationMessageFor(model => model.Senha)
    </div>

    <div>
        @Html.LabelFor(model => model.ComfirmaSenha)
    </div>
    <div>
        @Html.PasswordFor(model => model.ComfirmaSenha)<br />
        @Html.ValidationMessageFor(model => model.ComfirmaSenha)
    </div>

    <p><br /><input type="submit" value="Cadastrar" /></p>
</fldset>
}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")   
    
}