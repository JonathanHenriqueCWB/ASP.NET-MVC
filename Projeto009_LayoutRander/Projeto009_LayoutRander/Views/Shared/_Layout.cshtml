<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <!--chama o topo do site-->
    @RenderPage("_Topo.cshtml")

    <!--Conteúdo da página será mostrado aqui-->
    @RenderBody()

    <!--chama o rodapé padrão caso a pagina não tenha um já definido-->
    @if (IsSectionDefined("rodapeEspecifico")) {
        @RenderSection("rodapeEspecifico")
    }else {
        @RenderPage("_Rodape.cshtml")
    }



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
